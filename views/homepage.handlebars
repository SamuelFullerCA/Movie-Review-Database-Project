<link rel="stylesheet" type="text/css" href="/CSS/style.css">


    <section id="banner">
        </section>

    <section class="row justify-content-md-center">

        {{#if loggedIn}}
        <button class="col-sm writebtn writebtnmain" id="option1">Write a review</button>
        <button class="col-sm writebtn logout"  id="logout">Logout</button>
        {{else}}
        <button class="col-sm writebtn" data-bs-toggle="modal" data-bs-target="#staticBackdrop" id="option1">Login</button>
        <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-light" id="staticBackdropLabel">USER LOGIN</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="" id="login">
                                <label for="loginEmail" class="text-light">EMAIL</label><br><br>
                                <input type="text" id="loginEmail" class="modal-dialog-centered" placeholder="email">
                                <br><br>
                                <label for="loginPassword" class="text-light">PASSWORD</label><br><br>
                                <input type="password" class="modal-dialog-centered" id="loginPassword" placeholder="password">
                                <br>
                                <div id="modalAlert"></div>
                                <br>
                                <a href="/auth">New? Create an Account!</a>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" id="loginBtn">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
        {{#if loggedIn}}
        {{else}}
        <button type="button" class="col-sm writebtn signup" id="option1" onclick="window.location.href='/auth'">Signup</button>
        {{/if}}

    </section>
    <section>
        <div id="newRelease" class="row">
            <div class="newInTheaters col-12">
                <h2>New Releases:</h2>
                <p>Hover over â“˜ to see details!</p>
            </div>
            <div class="newrleaserow col-12">
        {{#each fetchedData.results as |movie|}}
        {{> release-details}}
        {{/each}}
        </div>
        </div>




    </section>
    <section>
        <div class="row justify-content-around reviewwrap">
            {{!-- <div class="newInTheaters">
            <h2>Latest Reviews</h2>
            </div> --}}
            <div class="latestreviews col-12">
                 <div class="newInTheaters">
                    <h2>Latest Reviews:</h2>
                </div>
            {{#each reviews as |review|}}
            {{> review-details}}
            {{/each}}
            </div>

            <div class="searchFunc col-12">
                <div class="row justify-content-center" id=" latest">
                    <div class="col-5 ">
                        <h2>Search for a movie</h2>
                        <div class="search bottomSearch">
                            <div class="search-box">
                                <div class="search-field">
                                <input placeholder="Movie Name" class="input movieNameInput" type="text">
                                <div class="search-box-icon">
                                    <button class="btn-icon-content movieNameInputBtn">
                                        <i class="search-icon">
                                            <svg xmlns="://www.w3.org/2000/svg" version="1.1" viewBox="0 0 512 512"><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" fill="#fff"></path></svg>
                                        </i>
                                    </button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-5">
                        <h2>Search for a user</h2>
                        <div class="search bottomSearch">
                            <div class="search-box">
                                <div class="search-field">
                                <input placeholder="Username" class="input usernameInput" type="text">
                                <div class="search-box-icon">
                                    <button class="btn-icon-content usernameInputBtn">
                                        <i class="search-icon">
                                            <svg xmlns="://www.w3.org/2000/svg" version="1.1" viewBox="0 0 512 512"><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" fill="#fff"></path></svg>
                                        </i>
                                    </button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    {{!-- {{#each reviews as |review|}}
                    {{> review-details}}
                    {{/each}} --}}
                </div>
            </div>
        </div>
    </section>
    <section class="">

    </section>
