{{!-- MOVIE SELECT SECTION --}}
{{!-- REVIEW FORM --}}
<section class="col-sm">
  <form class="postform form ping" action="">
    <label class="titleName" for=""></label>
    <br>
    <br>
    <label class="label" for="blogtitle">Title Your Review! :</label>
    <input type="text" class="inputjd" name="Title" id="blogtitle" required>
    <label class="label" for="blogcontent">Write Your Thoughts! :</label>
    <textarea name="Content" class="textarea" id="blogcontent" rows="8" required></textarea>
    <h3>Your Rating:</h3>
    {{!-- STAR RATING RADIO BUTTONS --}}
    <div id="starRating">
      <div class="rating">
        <input type="radio" id="star5" name="rate" value="5" />
